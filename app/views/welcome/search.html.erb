<h1>Search Results</h1>

<h1>Songs</h1>
<% if @resultsName.empty? %>
<h2>No songs found</h2>

<% else %>
<table style="width:80%; margin-left: auto;margin-right: auto;">
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Genre</th>
    <th>Year</th>
    <th>Duration</th>
  </tr>
<% @resultsName.each do |song|%>

  <tr>
    <th><%=song.title%></th>
    <th><%=song.artist%></th>
    <th><%=song.genre%></th>
    <th><%=song.year%></th>
    <th><%=song.duration%></th>
  </tr>

<% end %>
</table>
<% end %>

